<Page x:Class="BeautySalon.CreateAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateAppointmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <ComboBox x:Name="ClientListBox" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:HintAssist.Hint="Клиент" FontSize="25" Width="400">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding lastName}"/>
                            <Run Text="{Binding firstName}"/>
                            <Run Text="{Binding fathersName}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Name="EmployeeListBox" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:HintAssist.Hint="Сотрудник" FontSize="25" Width="400">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding lastName}"/>
                            <Run Text="{Binding firstName}"/>
                            <Run Text="{Binding fathersName}"/> 
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox DisplayMemberPath="name" materialDesign:TextFieldAssist.HasClearButton="True" x:Name="ServiceListBox" materialDesign:HintAssist.Hint="Услуга" FontSize="25" Width="400"></ComboBox>
            <ComboBox DisplayMemberPath="name" materialDesign:TextFieldAssist.HasClearButton="True" x:Name="StatusListBox" materialDesign:HintAssist.Hint="Статус" FontSize="25" Width="400"></ComboBox>
            <DatePicker Name="MainDatePicker" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:HintAssist.Hint="Дата" Language="ru-RU" FontSize="25" Width="400"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Row="1" HorizontalAlignment="Right">
            <Button Click="SaveButton_Click" Margin="0,0,5,0">Сохранить</Button>
            <Button Click="BackButton_Click">Отменить</Button>
        </StackPanel>
    </Grid>
</Page>
